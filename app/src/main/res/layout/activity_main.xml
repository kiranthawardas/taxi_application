<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kiran.taxiapplication.MainActivity"
    android:background="#e8e8e8">

    <Button android:id="@+id/pickup_location_1"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#b8201b"

        android:text="@string/suggested_locations_1"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000"

        android:onClick="requestPickup"
        android:tag="addr1"/>

    <Button android:id="@+id/pickup_location_2"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#de615c"
        android:layout_below="@id/pickup_location_1"

        android:text="@string/suggested_locations_2"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000"

        android:onClick="requestPickup"
        android:tag="addr2"/>

    <Button android:id="@+id/pickup_location_3"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#e39390"
        android:layout_below="@+id/pickup_location_2"

        android:text="@string/suggested_locations_3"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000"

        android:onClick="requestPickup"
        android:tag="addr3"/>

    <Button android:id="@+id/pickup_location_4"
        android:textAllCaps="false"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="#e8c6c4"
        android:layout_below="@+id/pickup_location_3"

        android:text="@string/suggested_locations_4"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#000"

        android:onClick="requestPickup"
        android:tag="addr4"/>

    <EditText
        android:layout_marginTop="60dp"
        android:id="@+id/enter_address"
        android:layout_below="@+id/pickup_location_4"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFF"
        android:textSize="20dp"
        android:paddingLeft="40dp"
        android:hint="Enter your pickup address:"
        android:maxLines="1"/>
    <Button
        android:layout_below="@id/enter_address"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Request a Cab"
        android:background="#000"
        android:textColor="#FFF"
        android:onClick="requestPickup_enter"/>
